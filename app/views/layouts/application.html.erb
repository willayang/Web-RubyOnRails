<!DOCTYPE html>
<html>
  <head>
    <title>^~^  Muriel's Toy Store</title>
   

    <%= stylesheet_link_tag    'application', :media => 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body class='<%= controller.controller_name %>'>
    <div id="banner">
      <%= image_tag("logo.png", :style=> "height: 110px") %>
      <%= @page_title ||"Welcome to Muriel's Toy Store  *~*" %>
    </div>
    <div id="columns">
      <div id="side">
        <% if @cart %>
	  <div id='cart'>
           <%= render @cart %>
           </div>
	<% end %>
       <ul>
        <li><%= link_to 'Home', store_path %></li>
	<li><%=link_to 'Questions', customer_service_question_path%></a></li>
       <li><%= link_to 'Contact Us', customer_service_contact_path %></li>
       <li><%= link_to 'About the Store', customer_service_about_path %></li>


       </ul>
        <% if session[:user_id] %>
         <ul>
              <li><%= link_to 'Orders', orders_path %></li>
		<li><%= link_to 'Products', products_path %></li>
		<li><%= link_to 'Users', users_path %></li>	
         </ul>
         <%= button_to 'Logout', logout_path, method: :delete %>
          <% else %>
         <%= button_to 'Login', login_path, method: :get %>
         <% end %>



      </div>
      <div id="main">
         <%= yield %>
       </div>
      </div>
  </body>
</html>
